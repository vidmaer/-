#include <iostream>
#include <cmath>
using namespace std;

int main() {
    int dn;
    
    cout <<"Vvedite nomer dnya nedeli: ";
    cin >> dn;
    
    switch(dn){
    
    case 1: puts("Segodnya Ponedelnik"); break;
    case 2: puts("Segodnya Vtornik"); break;
    case 3: puts("Segodnya Sreda"); break;
    case 4: puts("Segodnya Chetverg"); break;
    case 5: puts("Segodnya Pyatnica"); break;
    case 6: puts("Segodnya Sybbota"); break;
    case 7: puts("Segodnya Voskresenie"); break;
    
    default : puts("Chislo dolzno byt ot 1 do 7"); break;
    }
    return 0;
}
